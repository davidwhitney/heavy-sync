{  
  "include": [
    "./src/index.functionapp.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceRoot": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    "experimentalDecorators": true  
  }
}