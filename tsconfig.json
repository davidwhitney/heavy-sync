{
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./*.config.js", 
    "./*.config.ts", 
    "node_modules/*",
    "tsconfig.json"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceRoot": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    "experimentalDecorators": true
  }
}
